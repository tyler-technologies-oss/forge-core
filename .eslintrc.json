{
  "root": true,
  "ignorePatterns": [
    "dist/**/*",
    "test/**/*",
    "web-test-runner.config.mjs",
    "commitlint.config.mjs"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "tsconfigRootDir": ".",
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@tylertech-eslint/recommended"
      ]
    }
  ]
}
