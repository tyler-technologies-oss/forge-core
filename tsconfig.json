{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["dom", "es2020"],
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@tylertech/forge-core": ["src"],
      "@tylertech/forge-core/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "auto.config.ts", "gulpfile.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
