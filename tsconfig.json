{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2020"],
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "types": ["mocha", "chai", "node", "sinon"]
  },
  "files": [
    "src/index.ts"
  ]
}
